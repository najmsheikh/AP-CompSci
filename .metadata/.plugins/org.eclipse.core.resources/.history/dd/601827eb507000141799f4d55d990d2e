
public class Pascal {

	public static void main(String[] args) {
        int [][] nums = new int[10][10];
//        numbahz[0][0] = 1;
//        numbahz[1][0] = 1;
//        numbahz[1][1] = 1;

        for (int r=0; r<nums.length; r++) {
                nums[r] = new int[r+1];
                nums[r][0] = 1;
                nums[r][r] = 1;
                for (int c=1; c<r; c++) {
                        nums[r][c] = nums[r-1][c]+nums[r-1][c-1];
                        }
                }

        for (int r=0; r<nums.length; r++) {
                for (int c=0; c<nums[r].length; c++) {
                        System.out.print(" "+nums[r][c]);
                }
                System.out.println("");
                }
        }

}