
public class Pascal {

	public static void main(String[] args) {
        int [][] numbahz = new int[10][10];
//        numbahz[0][0] = 1;
//        numbahz[1][0] = 1;
//        numbahz[1][1] = 1;

        for (int r=0; r<numbahz.length; r++) {
                numbahz[r] = new int[r+1];
                numbahz[r][0] = 1;
                numbahz[r][r] = 1;
                for (int c=1; c<r; c++) {
                        numbahz[r][c] = numbahz[r-1][c]+numbahz[r-1][c-1];
                        }
                }

        for (int r=0; r<numbahz.length; r++) {
                for (int c=0; c<numbahz[r].length; c++) {
                        System.out.print(" "+numbahz[r][c]);
                }
                System.out.println("");
                }
        }

}